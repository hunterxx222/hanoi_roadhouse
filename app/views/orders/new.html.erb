<h1>
  <small>Order for <%= @food_item.name %></small>
</h1>

<div class="row">
  <div class="col-sm-4">
    <%= form_for [@food_item, Order.new] do |f| %>
      <fieldset class="form-group">
        <%= f.label :name  %>
        <%= f.text_field :name, class: "form-control"  %>

        <fieldset class="form-group">
          <%= f.label :phone  %>
          <%= f.text_field :phone, class: "form-control"  %>

          <fieldset class="form-group">
            <%= f.label :address  %>
            <%= f.text_area :address, class: "form-control"  %>
      </fieldset>
      <%= f.submit "Submit Order", class: "btn btn-primary" %>
      <%= link_to "Back", menu_path(section: @food_item.section.name), class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
